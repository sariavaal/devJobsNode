<main class="contenedor">
    <form action="/vacantes/nueva" method="post" class="default-form">
    <h3>Información General</h3>
    <div class="campo">
        <label>Titulo</label>
        <input type="text" name="titulo" placeholder="Ej: React Developer" required>
    </div>
    <div class="campo">
        <label>Empresa</label>
        <input type="text" name="empresa" placeholder="Empresa contrata" required>
    </div>
    <div class="campo">
        <label>Ubicacion</label>
        <input type="text" name="ubicacion" placeholder="Ej: Lima, Peru o Remoto" required>
    </div>
    <div class="campo">
        <label>Salario</label>
        <input type="text" name="salario" placeholder="Ej: $1000 o $1000 - $2000" required>
    </div>
    <div class="campo">
        <label name="contrato">
            <option value="" disabled selected>-- Seleccionar --</option>
            <option value="Freelance">Freelance</option>
            <option value="Completo">Completo</option>
            <option value="Medio Tiempo">Medio Tiempo</option>
            <option value="Por Proyecto">Por Proyecto</option>
        </label>
    </div>
    <h3>Descripción del Puesto</h3>
    </form>
</main>